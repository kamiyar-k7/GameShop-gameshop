@model Application.ViewModel.AdminSide.AdminOrdersViewModel;

<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="#description"><i  aria-hidden="true"></i>Registred</a></li>
                            <li><a href="#reviews"><i  aria-hidden="true"></i> In Procces</a></li>
                            <li><a href="#INFORMATION"><i  aria-hidden="true"></i>Delivred</a></li>
                            <li><a href="#Canceled"><i aria-hidden="true"></i>Canceled</a></li>
                        </ul>

                        <div id="myTabContent" class="tab-content custom-product-edit">

                            <div class="product-tab-list tab-pane fade active in" id="description">

                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="product-status-wrap">
                                            <h4>Registred Orders List</h4>
                                            
                                            <table>
                                                <tbody>
                                                    <tr>
                                                        
                                                        <th>Cart ID</th>
                                                        <th>Status</th>
                                                        <th>Price</th>
                                                       
                                                       
                                                        <th>Setting</th>
                                                    </tr>


                                                    @foreach (var order in Model.ListOfOrders.Where(x=> x.Status == Domain.entities.Cart.OrderStatus.Registred))
                                                    {
                                                        <tr>
                                                       
                                                        <td>@order.CartId</td>
                                                        <td>
                                                            <button class="pd-setting">@order.Status.ToString()</button>
                                                        </td>
                                                        <td>@order.Price</td>
                                                        
                                                        <td>
                                                                <a asp-area="Admin" asp-controller="Orders" asp-action="OrderDetails" asp-route-Id="@order.CartId" style="padding:5px;" data-toggle="tooltip" title="" class="pd-setting-ed" data-original-title="Edit" type="button"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                           
                                                        </td>
                                                    </tr> 

                                                    }
                                                   
                                              
                                                </tbody>
                                            </table>
                                            <div class="custom-pagination">
                                                <ul class="pagination">
                                                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                              
                            </div>


                            <div class="product-tab-list tab-pane fade" id="reviews">
                                <div class="row">
