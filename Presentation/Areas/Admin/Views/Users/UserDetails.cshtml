@model Application.ViewModel.AdminSide.UserDetailViewModel;

@{
	Layout = "_AdminLayout";
}

<div class="col-lg-12">
	<div class="single-product-pr">
		<div class="row">
			<div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
				<h1 style="color:white;">User Avatar:</h1>
				<br />
				<div id="myTabContent1" class="tab-content">
					<div class="product-tab-list tab-pane fade active in" id="single-tab1">
						<img src="~/assets/images/UserAvatar/@Model.User.UserAvatar" alt="">
					</div>
				</div>

			</div>


			<div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
				<div class="single-product-details res-pro-tb">
					<br />
					<h1>User Name:</h1>
					<div class="single-pro-price">
						<span class="single-regular">@Model.User.UserName</span><span class="single-old"></span>
					</div>
					<br />

					<h1>User Email:</h1>
					<div class="single-pro-price">
						<span class="single-regular">@Model.User.Email</span><span class="single-old"></span>
					</div>

					<br />
					<h1>User Created Date:</h1>
					<div class="single-pro-price">
						<span class="single-regular">@Model.User.Created</span><span class="single-old"></span>
					</div>

					<br />
					<h1>User Roles:</h1>
					<div>
						<ol style="font-size: larger;">
							@foreach (var item in Model.SelectedRoles)
							{
								<li style="color: white;">@item.RoleName</li>
							}
						</ol>
					</div>


					<div>
						<a asp-area="Admin" asp-controller="Users" asp-action="EditUser" asp-route-Id="@Model.User.Id" type="button" style="background-color:#152036; color:white;" class="btn btn-ctl-bt waves-effect waves-light">
                                        Edit User 
                           </a>
						<a asp-area="Admin" asp-controller="Users" asp-action="Users"  type="button" style="background-color:#152036; color:white; border:none;" class="btn btn-ctl-bt waves-effect waves-light">
							Back To Users
						</a>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>