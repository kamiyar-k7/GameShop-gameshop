@model Application.ViewModel.AdminSide.AdminGenresViewModel;



<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="product-status-wrap">
        <h4>Products List</h4>
        <div class="add-product">
            <a asp-area="Admin" asp-controller="Games" asp-action="AddNewGenre">Add Product</a>
        </div>
        <table>
            <tbody>

                <tr>
                    <th>ID</th>
                    <th>Platform Title</th>

                    <th>Setting</th>
                </tr>
                @foreach (var Genre in Model.ListOfGenres)
                {
                    <tr>
                        <td>@Genre.Id</td>
                        <td>@Genre.Name</td>

                        <td>
                            <a asp-area="Admin" asp-controller="Games" asp-action="EditGenre" asp-route-Id="@Genre.Id" style="padding:5px;" data-toggle="tooltip" title="" class="pd-setting-ed" data-original-title="Edit" type="button"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            <a asp-area="Admin" asp-controller="Games" asp-action="RemoveGenre" asp-route-Id="@Genre.Id" style="padding:5px;" data-toggle="tooltip" title="" class="pd-setting-ed" data-original-title="Trash" type="button" onclick="return confirm('are you sure you want Delete User ?')"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }



            </tbody>
        </table>
        <div class="custom-pagination">
            <ul class="pagination">

                @if (ViewBag.PageId > 1)
                {
                    <li class="page-item"><a class="page-link" href="/Admin/Games/ListOfGenres?pageid=@(ViewBag.PageId - 1)">Previous</a></li>
                }

                @for (int i = 1; i <= ViewBag.pagecount; i++)
                {
                    <li class="page-item"><a class="page-link @(((int)ViewBag.PageId == i) ? "active" : "")" href="/Admin/Games/ListOfGenres?pageId=@i">@i</a></li>
                }

                @if (ViewBag.PageId < ViewBag.pagecount)
                {
                    <li class="page-item"><a class="page-link" href="/Admin/Games/ListOfGenres?pageId=@(ViewBag.PageId + 1)">Next</a></li>
                }

            </ul>
        </div>
    </div>
</div>
