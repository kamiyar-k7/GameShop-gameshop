@model  Application.DTOs.UserSide.Account.SignInDto

@{

    Layout = "_AccountLayout";
    


}





<div class="padding-all">
    <div class="header">
        <h1><img src="/Login/images/5.png" alt=" "> Gaming Login Form</h1>
    </div>

    <div class="design-w3l">
        <div class="mail-form-agile">
            <form asp-controller="Account" asp-action="SignIn" method="post">
               

                <input type="email" asp-for="Email" placeholder="MyEmail@Email.com" required="" class="padding">
               
                <input type="password" asp-for="Password" class="padding" placeholder="Password" required="">

                @if (TempData.ContainsKey("ErrorMessage"))
                {
                    <div class="mail-form-agile" style="padding:5px; color:red;">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <br />
                <div class="mail-form-agile-agile">
                 
                    <label class="lns-checkbox">
                        <input type="checkbox" asp-for="RememberMe" >
                        <span>Remember Me</span>
                    </label>
                  
                </div>

                <br />

                <div>
                    <label class="padding" style="color:white"><a >Forgot Password?</a></label>
                    <br />
                    <br />
                    <label class="padding" style="color:white">Need A New Account? <a asp-controller="Account" asp-action="SignUp">Create Account</a></label>
                </div>
                <br />
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="submit" value="Submit" class="padding">

            </form>
        

        </div>

        <div class="clear"> </div>
    </div>

    <div class="footer">
        <p>© 2024 Gaming Shop All Rights Reserved   <a href="#">   </a></p>
    </div>
</div>

